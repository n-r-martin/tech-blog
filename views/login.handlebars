<form class="pure-form pure-form-stacked login-form">
    <fieldset>
        <p class="form-title">Log In</p>
        <label for="stacked-email">Email</label>
        <input type="email" id="email-login" class="pure-u-md-1-6" placeholder="Email" />
        <label for="stacked-password">Password</label>
        <input type="password" id="password-login" class="pure-u-md-1-6" placeholder="Password" />

        <button type="submit" class="login-button">Log In</button>
        <span class="pure-form-message">No Account? <a href="./signup">Sign Up</a></span>
    </fieldset>
</form>

<script src="./js/login.js"></script>